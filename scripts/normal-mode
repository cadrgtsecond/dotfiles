#!/usr/bin/env -S enter-mode "Normal:"
reload	~/.config/river/init
x	riverctl exit
r	sh -c "$(tofi-run --require-match=false)"
e	newterm "$(tofi-run --require-match=false)"
o	open-mode
s	script-mode
t	tile-mode
k	newterm sh -c 'START_COMMAND="kak -c \$(list-kak | tofi)" exec bash'
q	printf 'kill!' | kak -p "$(kak -l | tofi --prompt-text "kill:")"
n	newterm kak "$(locate-note "$(rg -Ir\$1 "^# (.*)" "$BRAIN_DIR" | sort | tofi --require-match=false)")"
