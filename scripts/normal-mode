#!/usr/bin/env enter-mode
~/.config/river/init	reload
riverctl exit	x
sh -c "$(bemenu < /dev/null)"	e
tile-mode	t
printf 'zzz\npoweroff now' | bemenu | xargs newterm doas 	p

# Keyboard
wlrctl keyboard type $(date -I)	d
cat ~/.local/bin/scripts/unicode_list.csv | bemenu -l 20 | cut -d, -f1 | wl-copy -n	ue
change-keyboard $(bemenu -l 20 <~/.config/keyboards)	us

# Kakoune stuff
newterm sh -c 'kak -c $(list-kak | bemenu); exec bash'	kk
printf 'kill!' | kak -p "$(kak -l | bemenu -p "kill")"	kq
kak -l | xargs -I{} kak -c {} -e kill!	kQ

# Notes
newterm kak "$(locate-note "$(rg -Ir\$1 "^# (.*)" "$BRAIN_DIR" | sort | bemenu -il 20)")"	n
newterm kak "$(fd . "$BRAIN_DIR" | bemenu -il 20)"	N

# Packages
apk search | floatpipe fzf | wl-copy	pr
apk list -I | floatpipe fzf | wl-copy	pi
cat /etc/apk/world | floatpipe fzf | wl-copy	pm
floatterm doas sh -c 'while true; do kak /etc/apk/world; apk upgrade && break; printf failure...; read; done; printf done...; read'	pw
floatterm doas sh -c 'apk upgrade -U; printf done...; read'	pu

# Open
firefox	of
foot	ot
firefox -P "Abhinav Krishna"	ou
floatterm alsamixer	oa
