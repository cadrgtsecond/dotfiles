#!/bin/sh

# Start flavours
printf '
\033]11;rgb:f7/f3/f7\a
\033]10;rgb:69/5d/69\a
\033]4;0;rgb:f7/f3/f7\a
\033]4;1;rgb:ca/40/2b\a
\033]4;2;rgb:91/8b/3b\a
\033]4;3;rgb:bb/8a/35\a
\033]4;4;rgb:51/6a/ec\a
\033]4;5;rgb:7b/59/c0\a
\033]4;6;rgb:15/93/93\a
\033]4;7;rgb:69/5d/69\a

\033]4;8;rgb:9e/8f/9e\a
\033]4;9;rgb:a6/59/26\a
\033]4;10;rgb:d8/ca/d8\a
\033]4;11;rgb:ab/9b/ab\a
\033]4;12;rgb:77/69/77\a
\033]4;13;rgb:29/23/29\a
\033]4;14;rgb:cc/33/cc\a
\033]4;15;rgb:1b/18/1b\a
' | tr -d '\n '
# End flavours

sleep infinity & PID=$!
trap "kill $PID" USR1

wait
exec set_theme
