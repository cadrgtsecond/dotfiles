\033]4;0;rgb:32/30/2f\a
\033]4;1;rgb:fb/49/34\a
\033]4;2;rgb:b8/bb/26\a
\033]4;3;rgb:fa/bd/2f\a
\033]4;4;rgb:83/a5/98\a
\033]4;5;rgb:d3/86/9b\a
\033]4;6;rgb:8e/c0/7c\a
\033]4;7;rgb:d5/c4/a1\a

\033]4;8;rgb:66/5c/54\a
\033]4;9;rgb:fe/80/19\a
\033]4;10;rgb:3c/38/36\a
\033]4;11;rgb:50/49/45\a
\033]4;12;rgb:bd/ae/93\a
\033]4;13;rgb:eb/db/b2\a
\033]4;14;rgb:d6/5d/0e\a
\033]4;15;rgb:fb/f1/c7\a
' | tr -d '\n '
# End flavours

sleep infinity & PID=$!
