#!/bin/execlineb
importas -iS HOME
export GIT_TERMINAL_PROMPT 0

foreground { mkdir -p ${HOME}/.local/share/base16 }
cd ${HOME}/.local/share/base16
foreground { git clone --depth 1 https://github.com/chriskempson/base16-schemes-source }

foreground { mkdir -p ${HOME}/.local/share/base16-themes }

pipeline { cut -d: -f2- ${HOME}/.local/share/base16/base16-schemes-source/list.yaml }
pipeline { tr -d [:blank:] }
pipeline { grep https:// }
cd ${HOME}/.local/share/base16-themes
forstdin -pE x
foreground {
    redirfd -w 2 /dev/null
    git clone --depth 1 $x
}
printf "Downloaded: %s\n" $x
